@model IEnumerable<WSTanHoa.Models.Zalo>

@{
    ViewBag.Title = "Index";
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/zalo")
<script src="https://zjs.zdn.vn/zalo/Zalo.Extensions.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        if ($('#IDZalo').val() == "") {
            getContext();
            $('#submit').click();
        }
    });
</script>

<body>
    @using (Html.BeginForm("Index", "Zalo", FormMethod.Post))
    {
        <div class="form-group">
            @Html.Editor("id", new { htmlAttributes = new { id = "IDZalo", @Value = ViewBag.IDZalo, @class = "form-control" } })
            <input id="submit" type="submit" value="Load" class="btn btn-default" style="display:none" />
        </div>

        <h2>Danh sách danh bộ đã đăng ký</h2>

        <p>
            @Html.ActionLink("Đăng ký mới", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DanhBo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoTen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiaChi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DanhBo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoTen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                        @Html.ActionLink("Xóa", "Delete", new { IDZalo = item.IDZalo, DanhBo = item.DanhBo }, new { onclick = "return confirm('Bạn có chắc chắn xóa?');" })
                    </td>
                </tr>
            }

        </table>
    }
</body>